	        	<div class="row rowPaddingCSS">
					<table class="bordered striped">
						<thead>
							<tr class="row">
								<th class="col-sm-4" style="text-align: center;">Column Name</th>
								<th class="col-sm-2" style="text-align: center;">Operations</th>
								<th class="col-sm-5" style="text-align: center;">Values</th>
								<th class="col-sm-1" style="text-align: center;">Add/Remove</th>
							</tr>
						</thead>
						<tr class="row" *ngFor="let field of filter.fields">
							<td class="col-sm-4">
								<select class="form-control" id="columnList" style="width:100%" name="filterColumnName" [(ngModel)]="field.columnName"
									(change)="getOperations(field.columnName)">
								    <option value="" disabled selected>Select Column</option>
								    <option *ngFor="let column of reports[0];" [ngValue]="column">{{column}}</option>
								</select>
							</td>
							<td class="col-sm-2">Select Operation</td>
							<td class="col-sm-5">
								<select class="form-control" multiple id="columnList" style="width:100%" name="filterColumnValue" [(ngModel)]="field.values">
								    <option value="" disabled selected>Select Values</option>
								    <option *ngFor="let value of valueList;" [ngValue]="value">{{value}}</option>
								</select>
							</td>
							<td class="col-sm-1">
								<span><button type="button"	class="btn btn-primary" data-toggle="tooltip" title="Remove Column"
											(click)='removeColumnList(i)'><i class="small material-icons">remove</i>
									</button>
								</span>
								<span>
									<button type="button" class="btn btn-primary" data-toggle="tooltip" title="Add Column" 
											(click)='addColumnList(i)'><i class="small material-icons">add</i>
									</button>
								</span>
							</td>
						</tr>
					</table>
				</div>
	        </div>
	    </form>
      </div>
      <div class="modal-footer modalFooter">
        <button type="button" class="btn btn-primary" data-toggle="tooltip" title="Save Filter"  data-dismiss="modal" (click)="createFilter(true)">Save Filter</button>
        <button type="button" class="btn btn-primary" data-toggle="tooltip" title="Save & Apply Filter" data-dismiss="modal" (click)="createFilter(false)">Save & Apply Filter</button>
      </div>
